{
  "name": "apollo-boost-app-demo",
  "version": "1.0.0",
  "description": "foot app demo graphql apollo",
  "main": "server.js",
  "engines":{
    "node": "10.x"
  },
  "scripts": {
    "start":"node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev":
      "concurrently --names \"server,client\" \"npm run server --silent\" \"npm run client --silent\"",
    "heroku-postbuild":"npm install --prefix client && npm run build --prefix --client"
    },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisandia/apollo-boost-app-demo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luisandia/apollo-boost-app-demo/issues"
  },
  "homepage": "https://github.com/luisandia/apollo-boost-app-demo#readme",
  "dependencies": {
    "apollo-server-express": "^2.6.7",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
